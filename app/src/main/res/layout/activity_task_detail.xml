<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B5A9CC"
    android:orientation="vertical"
    android:padding="10dp"

    tools:context=".TaskDetail">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Detail Tasks"
        android:textAlignment="center"
        android:textColor="#F8F5F5"
        android:textSize="35sp"
        android:textStyle="bold|italic"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/titletext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_marginTop="58dp"
        android:background="#CCBDE6"
        android:hint="Text Name"
        android:inputType="text"

        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30sp"

        tools:ignore="MissingConstraints"
        />

    <LinearLayout
        android:id="@+id/button_click"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_margin="30dp">

        <EditText
            android:id="@+id/disptext"
            android:layout_width="385dp"
            android:layout_height="191dp"
            android:textAlignment="center"
            android:layout_below="@+id/titletext"
            android:layout_marginTop="102dp"
            android:textColor="@color/white"
            android:maxLines="5"
            android:background="#CCBDE6"
            android:ems="10"
            android:hint="Enter the Description"
            android:inputType="textPersonName"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="-4dp"
            tools:layout_editor_absoluteY="286dp" />

        <Button
            android:id="@+id/btndes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Add Detail"
            android:onClick="enterButton"
            app:layout_constraintStart_toEndOf="@+id/disptext" />
    </LinearLayout>


</RelativeLayout>